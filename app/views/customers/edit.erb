<h1> customers/ edit page!!!</h1>

<form method='POST' action='/customers/<%=@customer.id%>'>

    <input type="hidden" id="hidden" name="_method" value="patch">
    <label for="first_name">First Name:</label>
    <input type="string" id="first_name" name="first_name" value="<%=@customer.first_name%>"><br>

    <label for="last_name">First Name:</label>
    <input type="string" id="last_name" name="last_name" value="<%=@customer.last_name%>"><br>

    <label for="email">Email:</label>
    <input type="string" id="email" name="email" value="<%=@customer.email%>"><br>

    <label for="address">Address:</label>
    <input type="string" id="address" name="address" value="<%=@customer.address%>"><br>

    <label for="state">State:</label>
    <input type="string" id="state" name="state" value="<%=@customer.state%>"><br>

    <label for="zip">Zip Code:</label>
    <input type="string" id="zip" name="zip" value="<%=@customer.zip%>"><br>

    <label for="password">Password:</label>
    <input type="string" id="password" name="password" value="<%=@customer.password%>"><br>

    <input type="submit" value="submit">


</form>